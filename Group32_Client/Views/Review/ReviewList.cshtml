@model IEnumerable<Group32_Client.Models.Review>
@{
    ViewData["Title"] = "Reviews";
}

<h1>Reviews</h1>
<h4>@ViewBag.ResName</h4>

<div>
    @if (Model != null)
    {
        @foreach (var item in ViewBag.Reviews)
        {
            <hr />
            <p>Author: @item.Email</p>
            <p>Date: @item.DateTime</p>
            <p>Rating: @item.Rating</p>
            <p>Comment: @item.Comment</p>
            <div>
                <a class="btn btn-warning" asp-action="UpdateReview" asp-controller="Review" asp-route-reviewId="@item.ReviewId">Edit</a>
                |
                <a class="btn btn-danger" asp-action="DeleteReview" asp-controller="Review" asp-route-reviewId="@item.ReviewId" asp-route-resId="@item.DestinationId">Delete</a>
            </div>
            <hr />
        }
    }
    else
    {
        <p>No reviews on this restaurant yet.</p>
    }
</div>
<div>
    <a asp-controller="Restaurant" asp-action="RestaurantList">Back to List</a>
</div>

